{
  "$schema": "http://json.schemastore.org/template",
  "author": "Niltor",
  "classifications": [
    "Web",
    "Web API",
    "API",
    "Entity Framework Core",
    "ASP.NET Core",
    "Web Framework"
  ],
  "identity": "Perigon.WebApi",
  "name": "Perigon Web API",
  "shortName": "perigon-webapi",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "MyProjectName",
  "preferNameDirectory": true,
  "sources": [
    {
      "source": "./",
      "target": "./",
      "exclude": [
        "**/[Bb]in/**",
        "**/[Oo]bj/**",
        "**/.template.config/**",
        "**/*.filelist",
        "**/*.user",
        "**/*.lock.json",
        ".git/**",
        "src/ClientApp/WebApp/**"
      ]
    },
    {
      "source": "./src/ClientApp/WebApp",
      "target": "./src/ClientApp/WebApp",
      "condition": "frontType == 'Angular'"
    }
  ],
  "symbols": {
    "frontType": {
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        {
          "choice": "None",
          "description": "No front-end",
          "displayName": "None"
        },
        {
          "choice": "Angular",
          "description": "Using Angular 21+ with Material",
          "displayName": "Angular 21+"
        }
      ],
      "defaultValue": "None",
      "description": "Select a Frontend framework"
    }
  }
}